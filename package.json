{
  "name": "csv-diff-pretty-print",
  "displayName": "CSV Diff Pretty Print",
  "description": "pretty-print csv diff",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.68.0"
  },
  "publisher": "f-velka",
  "repository": {
    "url": "https://github.com/f-velka/csv-diff-pretty-print"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:csv-diff-pretty-print.compareOpenedTwoFiles.csv",
    "onCommand:csv-diff-pretty-print.compareOpenedTwoFiles.tsv",
    "onCommand:csv-diff-pretty-print.compareOpenedTwoFiles.psv",
    "onCommand:csv-diff-pretty-print.compareOpenedTwoFiles.others"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "CSV Diff Pretty Print",
      "properties": {
        "csvDiffPrettyPrint.format.formatType": {
          "type": "string",
          "enum": [
            "Grid",
            "Compact"
          ],
          "default": "Grid",
          "enumDescriptions": [
            "Format files with grids.",
            "Format files with  only spaces."
          ],
          "description": "Controls the pretty-print format type."
        },
        "csvDiffPrettyPrint.format.insertLineBetweenRows": {
          "type": "boolean",
          "default": true,
          "description": "Inserts a Line between each rows or not."
        },
        "csvDiffPrettyPrint.parse.headerLocation": {
          "type": "string",
          "enum": [
            "None",
            "FirstRow",
            "Implicit"
          ],
          "default": "FirstRow",
          "enumDescriptions": [
            "Files have no header",
            "The first row of files is the header.",
            "Append indexed labels to files."
          ],
          "description": "Specifies the header location."
        }
      }
    },
    "commands": [
      {
        "command": "csv-diff-pretty-print.compareOpenedTwoFiles.csv",
        "title": "CSV Diff: Compare Opened Two Files (CSV)"
      },
      {
        "command": "csv-diff-pretty-print.compareOpenedTwoFiles.tsv",
        "title": "CSV Diff: Compare Opened Two Files (TSV)"
      },
      {
        "command": "csv-diff-pretty-print.compareOpenedTwoFiles.psv",
        "title": "CSV Diff: Compare Opened Two Files (PSV)"
      },
      {
        "command": "csv-diff-pretty-print.compareOpenedTwoFiles.others",
        "title": "CSV Diff: Compare Opened Two Files (Other Formats)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.68.0",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.18.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "csv-parse": "^5.2.2"
  }
}
